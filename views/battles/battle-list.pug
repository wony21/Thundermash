extends ../layout

block header 
    link(rel='stylesheet', href='/stylesheets/battles.css')

block content
    #root-layout
        div(id="add-group-button")
            span(class="mif-add mif-2x rounded fg-red bg-black ani-vertical") 

        //- table(class="table table-border cell-border" data-role="table")
            thread
                tr
                    th(rowspan="2") No.
                    th(colspan="3") 경기명칭
                    th 편집
                tr 
                    th 모임일자
                    th 참석자
                    th 참석율
                    th 생성자
            tbody(id="battle-list-container")
                script(type="text/html" id="battle-list-template")
                | {{#list}}  
                tr
                    td(rowspan="2") {{no}}
                    td(colspan="3") {{name}}
                    td 
                        button(class="button secondary") 편집
                tr 
                    td {{date}}
                    td 18명
                    td 100%
                    td {{creator}}
                | {{/list}}
block scripts
